<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/marcaPrimary"
    tools:context=".activity.detalle.fragment.detallePlanoFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lydetallePlano"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="4"
            android:visibility="invisible">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/ivPlano"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:layout_height="300dp"
                android:rotation="0"/>
            <!--   android:background="@drawable/logo_pequeno"-->

            <LinearLayout
                android:background="@color/marcaPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dimensiones"
                    android:gravity="center"
                    android:textColor="@color/marcaTitle"
                    android:textStyle="bold">
                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_table_plano"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5"
                        >
                        <TextView
                            android:text="Área Techada"
                            android:layout_width="wrap_content"
                            android:paddingLeft="10sp"
                            android:paddingRight="20sp"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:text="Área Libre"
                            android:layout_weight="1"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Área Total"
                            android:textColor="@color/marcaRed"
                            android:textStyle="bold"
                            android:paddingLeft="10sp"
                            android:paddingRight="20sp"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"     />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        >
                        <TextView
                            android:gravity="center"
                            android:id="@+id/txtTechada"
                            android:text="Área Techada"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:gravity="center"
                            android:id="@+id/txtLibre"
                            android:text="Área Libre"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:paddingTop="10sp"

                            android:paddingBottom="10sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/txtTotal"
                            android:text="ÁreaTotal"
                            android:textStyle="bold"
                            android:textColor="@color/marcaRed"
                            android:layout_width="match_parent"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"     />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@color/marcaPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30sp"
                android:layout_marginTop="30sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio"
                    android:gravity="center"
                    android:textColor="@color/marcaTitle"
                    android:textStyle="bold">
                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_table_plano"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        >
                        <TextView
                            android:id="@+id/txtTipoEst"
                            android:text="Estac. Doble"
                            android:layout_width="wrap_content"
                            android:paddingLeft="10sp"
                            android:paddingRight="20sp"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:text="Deposito"
                            android:layout_weight="1"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Precio Total"
                            android:textColor="@color/btnLogin"
                            android:textStyle="bold"
                            android:paddingLeft="10sp"
                            android:paddingRight="20sp"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"     />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        >
                        <TextView
                            android:id="@+id/txtDoble"
                            android:text="Área"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"

                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:id="@+id/txtDeposito"
                            android:text="Área Libre"
                            android:layout_weight="1"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/txtPrecioTotal"
                            android:textColor="@color/btnLogin"
                            android:text="ÁreaTotal"
                            android:textStyle="bold"
                            android:paddingTop="10sp"
                            android:layout_weight="1"
                            android:paddingBottom="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thrid"
            android:background="@color/marcaPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_below="@+id/lugares">
            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.5"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:background="@color/marcaHeader"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="22sp">

            </TextView>
            <View
                android:id="@+id/view6"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:background="@color/marcaHeader"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacto"
                android:textColor="@color/btnLogin"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="20sp"

                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvTitleCons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Constructora: "/>

                <TextView
                    android:id="@+id/tvConstructora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="20sp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvTitleCorr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo de ventas: "/>

                <TextView
                    android:id="@+id/tvCorreoVenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold"
                    android:layout_weight="0.5"

                    />
                <ImageButton
                    android:id="@+id/ibSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_email"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="20sp"

                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tvTitleTel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono fijo: "/>

                <TextView
                    android:id="@+id/tvTelefonoFijo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold"
                    android:layout_weight="0.5"

                    />
                <ImageButton
                    android:id="@+id/ibTelephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_phone"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="20sp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvTitleMovil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono móvil: "/>

                <TextView
                    android:id="@+id/tvTelefonoMovil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold"
                    android:layout_weight="0.5"
                    />
                <ImageButton
                    android:id="@+id/imWhatsapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_whatsapp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnSolicitar"
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:textColor="@color/backgroundLogin"
                android:text="Solicitar más información"
                android:background="@drawable/btn_guardar">

            </Button>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>