<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.PopupOverlay">
 <RelativeLayout
     android:background="@color/marcaPrimary"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:gravity="center">
  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbarMainPdf"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      app:popupTheme="@style/AppTheme.PopupOverlay"/>

  <TextView
      android:id="@+id/txtPdf"
      android:layout_width="wrap_content"
      android:layout_height="23dp"
      android:textSize="16sp"
      android:textColor="@color/marcaTitle"
      android:text="Plano de la estructura"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      />
  <!--   <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"
          android:paddingRight="19px"
          android:id="@+id/ic_compartir"
          android:src="@drawable/ic_compartir"
          android:contentDescription="@string/app_name" />-->

 </RelativeLayout>
</com.google.android.material.appbar.AppBarLayout>
