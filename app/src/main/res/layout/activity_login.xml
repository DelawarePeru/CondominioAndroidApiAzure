<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="@drawable/login_condominio2"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:background="@drawable/logo"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_height="60dp">

    </ImageView>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:layout_below="@+id/logo"
        android:layout_centerInParent="true"
        android:background="@drawable/border_corners_login"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/titleLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido"
            android:gravity="center"
            android:textSize="22dp"
            android:textStyle="bold"
            ></TextView>

        <EditText
            android:id="@+id/etUsuario"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/titleLogin"
            android:layout_marginTop="45dp"
            android:background="@drawable/edtx_login_background"
            android:drawablePadding="8dp"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="15dp"
            android:hint="Usuario"
            android:paddingStart="16dp"
            android:textColor="@color/marcaTitle"
            android:textColorHint="@color/marcaHeader" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/etUsuario"
            android:layout_marginTop="25dp"
            android:background="@drawable/edtx_login_background"
            android:drawablePadding="8dp"
            android:hint="ContraseÃ±a"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:textColor="@color/marcaTitle"
            android:textColorHint="@color/marcaHeader" />

        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/etPassword"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_login"
            android:isScrollContainer="true"
            android:text="Ingresar"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:layout_below="@+id/btnIngresar"
            android:layout_marginBottom="30dp" />

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/pgbLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        >

    </ProgressBar>
</RelativeLayout>