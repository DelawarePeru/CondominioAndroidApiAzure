<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="@drawable/login_condominio2"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="70dp"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_height="70dp"
        android:layout_marginTop="-50dp"/>


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:layout_below="@+id/logo"
        android:layout_centerInParent="true"
        android:background="@drawable/border_corners_login"
        >
        <TextView
            android:id="@+id/titleLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bienvenido"
            android:gravity="center"
            android:textSize="27sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/texto"
            android:layout_below="@+id/titleLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Ingresa tu correo electrónico para enviarte un enlace  para que puedas recuperar tu contraseña."
            android:gravity="center"
            android:textSize="13sp"
            />
        <EditText
            android:id="@+id/etNombre"
            android:visibility="gone"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/texto"
            android:layout_marginTop="25dp"
            android:background="@drawable/edtx_login_background"
            android:drawablePadding="8dp"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="15dp"
            android:hint="Nombres"
            android:paddingStart="16dp"
            android:textColor="@color/marcaTitle"
            android:textColorHint="@color/marcaHeader" />
        <EditText
            android:id="@+id/etApellido"
            android:visibility="gone"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/etNombre"
            android:layout_marginTop="25dp"
            android:background="@drawable/edtx_login_background"
            android:drawablePadding="8dp"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="15dp"
            android:hint="Apellidos"
            android:paddingStart="16dp"
            android:textColor="@color/marcaTitle"
            android:textColorHint="@color/marcaHeader" />
        <EditText
            android:id="@+id/etUsuario"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/etApellido"
            android:layout_marginTop="25dp"
            android:background="@drawable/edtx_login_background"
            android:drawablePadding="8dp"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="15dp"
            android:hint="Usuario"
            android:paddingStart="16dp"
            android:textColor="@color/marcaTitle"
            android:textColorHint="@color/marcaHeader" />
        <EditText
            android:id="@+id/etTelefono"
            android:visibility="gone"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/etUsuario"
            android:layout_marginTop="25dp"
            android:background="@drawable/edtx_login_background"
            android:drawablePadding="8dp"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="15dp"
            android:hint="Teléfono"
            android:paddingStart="16dp"
            android:textColor="@color/marcaTitle"
            android:textColorHint="@color/marcaHeader" />
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/etTelefono"
            android:layout_marginTop="25dp"
            android:background="@drawable/edtx_login_background"
            android:drawablePadding="8dp"
            android:hint="Contraseña"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:textColor="@color/marcaTitle"
            android:textColorHint="@color/marcaHeader" />
        <EditText
            android:id="@+id/etPasswordRepetir"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:visibility="gone"

            android:layout_below="@+id/etPassword"
            android:layout_marginTop="25dp"
            android:background="@drawable/edtx_login_background"
            android:drawablePadding="8dp"
            android:hint="Confirmar contraseña"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:textColor="@color/marcaTitle"
            android:textColorHint="@color/marcaHeader" />
        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/etPasswordRepetir"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_login"
            android:isScrollContainer="true"
            android:text="Ingresar"
            android:textAllCaps="false"
            android:textColor="#fff" />
        <Button
            android:id="@+id/btnRegistrar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/btnIngresar"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_guardar"
            android:isScrollContainer="true"
            android:text="Registrar"
            android:textAllCaps="false"
            android:textColor="#fff" />
        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/btnRegistrar"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_login"
            android:isScrollContainer="true"
            android:text="Enviar"
            android:visibility="gone"
            android:textAllCaps="false"
            android:textColor="#fff" />
        <TextView
            android:id="@+id/tvNuevoRegistro"
            android:text="¿Eres nuevo?"
            android:paddingTop="10dp"
            android:gravity="center"
            android:textColor="@color/colorGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnEnviar"/>
        <TextView
            android:id="@+id/tvOlvidarContraseña"
            android:text="¿No recuerdas tu contraseña?"
            android:paddingTop="15dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNuevoRegistro"/>


        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:layout_below="@+id/btnIngresar"
            android:layout_marginBottom="30dp" />
        <TextView
            android:id="@+id/tvCancelar"
            android:text="Cancelar"
            android:visibility="gone"
            android:paddingTop="15dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvOlvidarContraseña"/>

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/pgbLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        >

    </ProgressBar>
</RelativeLayout>