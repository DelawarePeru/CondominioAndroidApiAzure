    <style name="FacebookLoginButton">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/ic_vincular</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="appCompatSpinnerStyle" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/marcaHeader</item>
        <item name="android:textSize">12sp</item>
        <item name="android:radius">10sp</item>

    </style>
    <style name="select" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/marcaTitle</item>


